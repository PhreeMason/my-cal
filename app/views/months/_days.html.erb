
<% month.prev_month_last_days.each do |day| %>
  <li class="day other-month" id="last-month-<%= day%>">
    <div class="date"><%= day %></div>
    <%= show_task(month.prev_month, day) %>
  </li>
<% end %>

<% month.all_days.each do |day| %>
 <li class="day" id="this-month-<%= day%>">
   <div class="date"><%= day %></div>
   <%= show_task(month, day) %>
 </li>
<% end %>

<% month.next_month_first_days.each do |day| %>
  <li class="day other-month" id="next-month-<%= day%>">
    <div class="date"><%= day %></div>
    <%= show_task(month.next_month, day) %>
  </li>
<% end %>

