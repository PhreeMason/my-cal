<%= form_for(@task) do |f| %>
  <%= f.label :content %></br>
  <%= f.text_area :content %></br>
  <%= f.label :start_time %>
  <%= select_time Time.now %></br>
  <%= f.label :year %>
  <%= select_year Time.now %></br>
  <%= f.label :month %>
  <%= select_month Time.now %></br>
  <%= f.label :day %>
  <%= select_day Time.now %></br>
  <%= f.submit %></br>
<%end%>
