
<div id="mytopnav">
  <nav >
    <ul>
      <% if logged_in? %>
        <li style="float:left"><%= link_to 'Last Month', prev_month(@month) %></li>
        <li id='username'><%= link_to "Sign out #{current_user.username}", destroy_user_session_path, method: :delete %></li>
        <li style="float:right"><%= link_to 'Next Month', next_month(@month) %></li>
      <%else%>
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
</div>
